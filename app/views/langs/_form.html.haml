= form_for(user_lang_path(id: current_user.id)) do |f|
  - if lang.errors.any?
    #error_explanation
      %h2
        = pluralize(lang.errors.count, "error")
        prohibited this lang from being saved:
      %ul
        - lang.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit

%p#notice= notice
%h1 Words
= current_user.email
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @words.each do |word|
      %tr
        %td= word.name
        %td= link_to 'Show', word
        %td= link_to 'Edit', edit_word_path(word)
        %td= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Word', new_word_path
= link_to 'Lout', destroy_user_session_path, method: :delete
